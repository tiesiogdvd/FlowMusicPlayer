<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:gravity="center">
        <shape
            android:shape="ring"
            android:thickness="5dp"
            android:useLevel="false">

            <stroke
                android:width="3dp"
                android:color="#59424141"/>

            <solid
                android:color="#392828"/>
            <solid android:color="#4AFFFFFF"
                />

            <gradient
                android:startColor="#AD717171"
                android:endColor="#97000000"
                android:angle="270" />
        </shape>
    </item>
</layer-list>

