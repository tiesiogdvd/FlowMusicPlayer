<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLibraryPlaylist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/library_playlist"
    android:layout_marginRight="20dp"
    android:padding="5dp"
    android:layout_marginLeft="20dp"
    style="@style/AppTheme"
    android:layout_marginTop="10dp">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLibraryPlaylist"
            android:background="@drawable/img_bg_6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/recycler_item_playlists_button">


        <TextView
            android:id="@+id/textLibraryPlaylist"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="-1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fefefe"
            android:gravity="start"
            android:text="Playlist name"
            android:textSize="10dp"
            android:layout_gravity="start"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_margin="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="@drawable/recycler_item_playlists_button">

        <ImageView
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_note_no_alpha"
            android:scaleX="0.8"
            android:scaleY="0.8"
            />

        <TextView
            android:id="@+id/sizeLibraryPlaylist"
            android:paddingEnd="3dp"
            android:layout_marginBottom="-1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fefefe"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="1 songs"
            android:textSize="8dp"
             />

    </LinearLayout>



    <CheckBox
        android:id="@+id/checkboxLibraryPlaylist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:buttonTint="@color/drawable_bar"
        />




</androidx.constraintlayout.widget.ConstraintLayout>