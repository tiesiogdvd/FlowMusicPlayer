<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true" >


    <alpha
        android:duration="200"
        android:fromAlpha="0.0"

        android:toAlpha="1.0"/>
    <scale
        android:duration="200"

        android:fromXScale="1.3"
        android:fromYScale="1.3"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" >
    </scale>

</set>
